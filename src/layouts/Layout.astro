---
import Navigation from '../components/Navigation.astro';
import '../index.css';

interface Props {
  title?: string;
}

const { title = 'Sinobukhosi Investments' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Sinobukhosi Investments - A wholly black-owned investment company focused on sustainable long-term growth" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href="/images/logo.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/images/logo.png" />
    <link rel="icon" type="image/png" sizes="192x192" href="/favicon-192x192.png" />
    <link rel="icon" type="image/png" sizes="512x512" href="/favicon-512x512.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="shortcut icon" href="/images/logo.svg" />
    <link rel="manifest" href="/site.webmanifest" />
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300&family=Montserrat:wght@300;400;500;600&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body>
    <div class="min-h-screen sinobhukosi-bg-dark text-white">
      <Navigation />
      <main class="pt-16">
        <slot />
      </main>
      <footer class="sinobhukosi-bg-dark border-t sinobhukosi-border-gold py-8">
        <div class="container mx-auto px-4 text-center">
          <div class="mb-4">
            <p class="text-sm text-muted-foreground">Tel: 083 711 8686</p>
          </div>
          <p class="text-sm text-muted-foreground">Â©2020 by Sinobhukosi.</p>
        </div>
      </footer>
    </div>
  </body>
</html>

